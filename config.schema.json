{
    "pluginAlias": "DummyTimer",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true
            },
            "brightness": {
                "title": "Brightness",
                "type": "integer",
                "default": 0,
                "placeholder": 0,
                "maximum": 100,
                "description": "Starting timer (brightness) everytime the switch is on."
            },
            "delayUnit": {
                "title": "Delay Time Unit",
                "description": "Delay Time Unit (milliseconds/seconds/minutes/hours/days).",
                "type": "string",
                "default": "m",
                "required": true,
                "oneOf": [
                    {
                        "title": "seconds",
                        "enum": [
                            "s"
                        ]
                    },
                    {
                        "title": "minutes",
                        "enum": [
                            "m"
                        ]
                    },
                    {
                        "title": "hours",
                        "enum": [
                            "h"
                        ]
                    },
                    {
                        "title": "days",
                        "enum": [
                            "d"
                        ]
                    }
                ]
            },
            "disableLogging": {
                "title": "DisableLogging",
                "type": "boolean",
                "default": false,
                "description": "No state change information (On/Off) will be logged. "
            }
        }
    }
}